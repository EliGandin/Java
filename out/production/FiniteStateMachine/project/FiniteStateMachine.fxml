            <Button fx:id="help" mnemonicParsing="false" onAction="#help">
               <HBox.margin>
                  <Insets right="50.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#clear" prefHeight="26.0" prefWidth="215.0" text="Clear" />
            <Button mnemonicParsing="false" onAction="#saveMachine" text="Save">
               <HBox.margin>
                  <Insets left="50.0" />
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
